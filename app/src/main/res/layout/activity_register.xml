<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_100">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/register_icon_name_default_xhdpi" />

        <EditText
            android:id="@+id/et_nicheng"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableBottom="@drawable/bootom_line"
            android:hint="昵称"
            android:paddingLeft="@dimen/dp_40"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/register_icon_sex_default_xxhdpi" />

        <EditText
            android:id="@+id/et_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableBottom="@drawable/bootom_line"
            android:hint="性别"
            android:paddingLeft="@dimen/dp_40"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/register_icon_date_default_xxhdpi" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableBottom="@drawable/bootom_line"
            android:hint="出生日期"
            android:inputType="datetime"
            android:paddingLeft="@dimen/dp_40"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/register_icon_phone_default_xhdpi" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableBottom="@drawable/bootom_line"
            android:hint="手机号"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_40"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/register_icon_mail_default_xxhdpi" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableBottom="@drawable/bootom_line"
            android:hint="邮箱"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/dp_40"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/register_icon_lock_default_xxhdpi" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableBottom="@drawable/bootom_line"
            android:hint="登陆密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_40"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/register_icon_lock_default_xxhdpi" />

        <EditText
            android:id="@+id/et_pwd2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableBottom="@drawable/bootom_line"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_40"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@drawable/circle1"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18" />
</LinearLayout>
