<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <LinearLayout
            android:id="@+id/address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/localcation"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/map_2"
                android:gravity="center" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center"
                android:text="北京"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/find_item"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_33"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/find_bg">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/find" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/find_tan"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_33"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/find_bg"
            android:visibility="gone">

            <ImageView
                android:id="@+id/find_image"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/find" />

            <EditText
                android:id="@+id/find_cinema"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/find_image"
                android:hint="CGV影城"
                android:textSize="@dimen/dp_10" />

            <TextView
                android:id="@+id/find_sou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/find_cinema"
                android:text="搜索"
                android:textSize="@dimen/dp_15" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
