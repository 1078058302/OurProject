<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:text="意见反馈"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/iv_duihao"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_140"
        android:background="@mipmap/duihao2" />

    <TextView
        android:id="@+id/tv_fankui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_duihao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_26"
        android:text="反馈成功"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fankui"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_26"
        android:text="感谢您对维度影院的关注与支持,我们会认真处理您的反馈，尽快修复和完善相关功能。"
        android:textColor="#666666"
        android:textSize="@dimen/sp_12" />

    <com.bw.movie.mvp.view.LayoutBlank
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"></com.bw.movie.mvp.view.LayoutBlank>
</RelativeLayout>
