<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.CinemaFragment">

    <com.bw.movie.mvp.view.LayoutBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"></com.bw.movie.mvp.view.LayoutBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <Button
            android:id="@+id/recommend"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_55"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@drawable/edit_bg"
            android:text="推荐影院" />

        <Button
            android:id="@+id/nearby"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_80"
            android:background="@drawable/edit_bg1"
            android:text="附近影院" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/show_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>