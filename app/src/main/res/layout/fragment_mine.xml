<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MineFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@mipmap/bitmap1">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/my_icon_remind_default_xxhdpi" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sd"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerInParent="true"
                app:placeholderImage="@mipmap/bitmap2" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="冬天来了"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="32dp"
                    android:background="@mipmap/my_icon_messiage_default_xxhdpi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="我的信息"
                    android:textColor="#333333"
                    android:textSize="14dp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle">

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/my_icon_attention_default_xxhdpi" />

                <TextView
                    android:id="@+id/wode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="我的关注"
                    android:textColor="#333333"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/rl2">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/my_icon_rccord_default_xxhdpi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv3"
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="10dp"
                    android:text="购票记录"
                    android:textColor="#333333"
                    android:textSize="14dp" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle">

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/my_icon_feedback_default_xxhdpi" />

                <TextView
                    android:id="@+id/yijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv4"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="意见反馈"
                    android:textColor="#333333"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/rl4">

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/my_icon_version_default_xxhdpi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv5"
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="10dp"
                    android:text="最新版本"
                    android:textColor="#333333"
                    android:textSize="14dp" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="©八维移动通信学院毕业作品"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>