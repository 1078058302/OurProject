<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".activity.SuccessShowActivity">

    <ImageView
        android:id="@+id/paypal_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/weixin_sure" />

    <TextView
        android:id="@+id/paypal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paypal_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:text="支付成功"
        android:textColor="#FF1BAD19"
        android:textSize="@dimen/dp_20" />

    <TextView
        android:id="@+id/weidu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paypal_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:text="维度影院"
        android:textColor="#000"
        android:textSize="@dimen/dp_15" />

    <RelativeLayout
        android:id="@+id/price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weidu"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:text="¥"
            android:textColor="#000"
            android:textSize="@dimen/dp_25"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/rmb"
            android:text="0.00"
            android:textColor="#000"
            android:textSize="@dimen/dp_40"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/finish"
        android:layout_width="@dimen/dp_190"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_45"
        android:background="@drawable/finish_bg"
        android:text="完成"
        android:textColor="#50974a"
        android:textSize="@dimen/dp_16" />
</RelativeLayout>