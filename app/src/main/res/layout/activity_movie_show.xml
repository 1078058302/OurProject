<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MovieShowActivity">

    <RelativeLayout
        android:id="@+id/movieshow_map_relative"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30">

        <ImageView
            android:id="@+id/movieshow_map"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/map2" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_39"
        android:layout_toRightOf="@+id/movieshow_map_relative"
        android:text="北京"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_37"
        android:background="@drawable/find_bg">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:background="@mipmap/find" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/movieshow_but_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@+id/movieshow_map_relative"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16">

        <Button
            android:id="@+id/hot_bt_movieshow"
            android:layout_width="@dimen/dp_90"
            android:layout_height="match_parent"
            android:background="@drawable/edit_bg1"
            android:text="热门电影"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/moviing_bt_movieshow"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:background="@drawable/edit_bg1"
            android:text="正在热映"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/next_bt_movieshow"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/edit_bg1"
            android:text="即将上映"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_movieshow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/movieshow_but_relative"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24">

        <ImageView
            android:id="@+id/movieshow_image_retreat"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:src="@mipmap/retreat_h" />
    </RelativeLayout>
</RelativeLayout>