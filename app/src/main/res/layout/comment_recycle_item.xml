<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.3"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10">

            <RelativeLayout
                android:id="@+id/evaluate_title_comment_activity_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_movie_comment_activity_item"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    fresco:roundAsCircle="true" />

                <TextView
                    android:id="@+id/evaluate_username_movie_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/image_movie_comment_activity_item"
                    android:text="AAAA"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <TextView
                android:id="@+id/username_evaluate_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/evaluate_title_comment_activity_item"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="BBBBB" />

            <RelativeLayout
                android:id="@+id/evaluate_middle_evaluate_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_evaluate_item"
                android:layout_marginTop="@dimen/dp_10">


                <TextView
                    android:id="@+id/time_movie_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAA"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/news_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="CCC" />

                <ImageView
                    android:id="@+id/news_image_item"
                    android:layout_width="13dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    android:layout_toLeftOf="@+id/news_text_item"
                    android:src="@mipmap/news" />

                <TextView
                    android:id="@+id/good_text_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_toLeftOf="@+id/news_image_item"
                    android:text="DDD" />

                <ImageView
                    android:id="@+id/good_image_item"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_6"
                    android:layout_toLeftOf="@+id/good_text_item"
                    android:src="@mipmap/praise_default" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/evaluate_middle_evaluate_item"
                android:layout_marginTop="@dimen/dp_5"
                android:background="#c5c5c5" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>