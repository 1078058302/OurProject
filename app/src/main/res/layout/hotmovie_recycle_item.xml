<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/movie_fragment_item_relative"
    android:layout_height="@dimen/dp_164">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hotmovie_item_image"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_164"
        android:layout_marginLeft="@dimen/dp_24"
        fresco:roundedCornerRadius="@dimen/dp_8" />

    <RelativeLayout
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="#80d0caca">

        <TextView
            android:id="@+id/movie_fragment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="反贪风暴"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
</RelativeLayout>
